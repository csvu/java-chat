<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Button?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="container" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="mop.app.client.controller.admin.DashboardController">
    <stylesheets>
        <URL value="@../../css/admin.css"/>
    </stylesheets>

    <!-- Header Area -->
    <VBox styleClass="header-area" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets left="40.0" right="40.0" top="20.0" bottom="20.0"/>
        </padding>
        <Label styleClass="header-text" text="Admin Dashboard"/>
    </VBox>

    <!-- Content Area -->
    <VBox spacing="20" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="100.0">
        <!-- Metrics Cards -->
        <HBox spacing="20.0">
            <!-- Today's Registrations Card -->
            <StackPane styleClass="metric-card, clickable-card" fx:id="todayRegistrationsCard" onMouseClicked="#showTodayRegistrations">
                <padding>
                    <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                </padding>
                <VBox>
                    <Label styleClass="metric-label" text="New Users Today"/>
                    <Label fx:id="todayRegistrationsLabel" styleClass="metric-value" text="0"/>
                    <Label styleClass="metric-subtitle" text="Click to view more details"/>
                </VBox>
            </StackPane>

            <!-- Active Users Card -->
            <StackPane styleClass="metric-card, clickable-card" fx:id="activeUsersCard" onMouseClicked="#showActiveUsers">
                <padding>
                    <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                </padding>
                <VBox>
                    <Label styleClass="metric-label" text="Active Users"/>
                    <Label fx:id="activeUsersLabel" styleClass="metric-value" text="0"/>
                    <Label styleClass="metric-subtitle" text="Click to view more details"/>
                </VBox>
            </StackPane>
        </HBox>

        <!-- Registration Chart Section -->
        <BarChart fx:id="barChart" prefHeight="400" prefWidth="900">
            <xAxis>
                <CategoryAxis fx:id="monthAxis" label="Month"/>
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="userAxis" label="New Registrations"/>
            </yAxis>
        </BarChart>
    </VBox>
</AnchorPane>