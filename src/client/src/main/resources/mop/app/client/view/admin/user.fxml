<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1150.0" styleClass="container" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="mop.app.client.controller.admin.UserController">
    <stylesheets>
        <URL value="@../../css/admin.css"/>
    </stylesheets>
    <padding>
        <Insets left="40.0" right="20.0"/>
    </padding>
    <VBox layoutX="20" layoutY="20" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="20.0">
        <Label styleClass="header-text" text="User List"/>
        <HBox spacing="30.0">
            <VBox spacing="10.0">
                <HBox spacing="10.0">
                    <TextField fx:id="filterField" prefWidth="200" promptText="Filter by name"
                               styleClass="data-filter"/>
                    <ComboBox fx:id="actionComboBox" prefWidth="200" promptText="Action"/>
                    <Button onAction="#applyAction" prefWidth="100" styleClass="apply-button" text="Apply"/>
                </HBox>
            </VBox>

            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button onAction="#createUser" prefWidth="150" styleClass="create-button" text="CREATE">
                    <graphic>
                        <FontAwesomeIconView glyphName="PLUS" size="20" styleClass="create-icon"/>
                    </graphic>
                </Button>
                <HBox.margin>
                    <Insets right="20.0"/>
                </HBox.margin>
            </HBox>
        </HBox>
    </VBox>
    <TableView fx:id="userTable" layoutX="14.0" layoutY="100.0" prefHeight="500" prefWidth="1150.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="120.0">
        <columns>
            <TableColumn fx:id="userNameCol" prefWidth="130" text="Username"/>
            <TableColumn fx:id="emailCol" prefWidth="220" text="Email"/>
            <TableColumn fx:id="displayNameCol" prefWidth="150" text="Display Name"/>
            <TableColumn fx:id="birthdayCol" prefWidth="120" text="Birthday"/>
            <TableColumn fx:id="genderCol" prefWidth="100" text="Gender"/>
            <TableColumn fx:id="addressCol" prefWidth="300" text="Address"/>
            <TableColumn fx:id="updateCol" prefWidth="130"/>
        </columns>
    </TableView>
</AnchorPane>
