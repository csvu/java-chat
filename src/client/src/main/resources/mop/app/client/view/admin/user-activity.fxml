<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mop.app.client.controller.admin.UserActivityController">
    <stylesheets>
        <URL value="@../../css/admin.css"/>
    </stylesheets>
    <children>
        <VBox spacing="10" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label fx:id="usernameLabel" styleClass="header-text" text="Username: "/>
                <HBox spacing="30.0">
                    <children>
                        <ComboBox fx:id="filterComboBox" prefWidth="200" promptText="Filter"/>
                        <Button onAction="#applyFilter" prefWidth="100" styleClass="apply-button" text="Filter"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <AnchorPane fx:id="contentPane" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0" />
    </children>
</AnchorPane>